<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="use_covariance" default="false" />
    <arg name="robot_name" default="robot_0" />

    <group ns="$(arg robot_name)">
        <node pkg="local_goal_creator" type="local_goal_creator_node" name="local_goal_creator_node" output="screen">
            <param name="hz" value="10" />
            <param name="use_covariance" value="$(arg use_covariance)" />
            <param name="robot_name" value="$(arg robot_name)" />
            <param name="local_goal_dist" value="5.0" />
            <param name="local_goal_frame_id" value="$(arg robot_name)/base_link" />
        </node>
    </group>

</launch>